package {{.}}

import (
	"embed"

	"github.com/gobuffalo/buffalo"
)

var (
	//go:embed public/*
	assets embed.FS

	//go:embed app/templates/* app/templates/*/*
	templates embed.FS

	//go:embed config
	config embed.FS

	//go:embed migrations
	migrations embed.FS

	// FS used by the app, these are based on the embed.FS declared
	// in the fs variable.
	Assets     = buffalo.NewFS(assets, "public")
	Templates  = buffalo.NewFS(templates, "app/templates")
	Migrations = buffalo.NewFS(migrations, "migrations")
	Config     = buffalo.NewFS(config, "config")
)